<script>
const USER_KEY="history_user";
const THEME_KEY="history_theme";
const MUTE_KEY="history_mute";

const DEFAULT_AVATAR =
"data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='200' height='200'><rect width='100%' height='100%' fill='%23333'/><circle cx='100' cy='80' r='40' fill='%23aaa'/><rect x='40' y='130' width='120' height='50' rx='25' fill='%23aaa'/></svg>";

let audioCtx=null;
let isMuted = localStorage.getItem(MUTE_KEY)==="true";

function playSound(f,d){
  if(isMuted) return;
  if(!audioCtx){
    audioCtx = new (window.AudioContext||window.webkitAudioContext)();
  }
  const o=audioCtx.createOscillator();
  const g=audioCtx.createGain();
  o.frequency.value=f;
  g.gain.value=0.1;
  o.connect(g); g.connect(audioCtx.destination);
  o.start(); setTimeout(()=>o.stop(),d);
}

function vibrate(ms){
  if(navigator.vibrate) navigator.vibrate(ms);
}

/* ØªØ³Ø¬ÙŠÙ„ */
function previewAvatar(e){
  const file=e.target.files[0];
  if(!file) return;
  const r=new FileReader();
  r.onload=()=>avatarPreview.src=r.result;
  r.readAsDataURL(file);
}

function saveUser(){
  if(!username.value || !password.value){
    playSound(200,400); vibrate(200);
    alert("Ø§ÙƒØªØ¨ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª");
    return;
  }
  const user={
    username:username.value,
    password:password.value,
    avatar:avatarPreview.src || DEFAULT_AVATAR
  };
  localStorage.setItem(USER_KEY,JSON.stringify(user));
  playSound(800,200);
  startApp();
}

function startApp(){
  const u=JSON.parse(localStorage.getItem(USER_KEY));
  if(!u) return;
  loginScreen.style.display="none";
  app.style.display="block";
  avatar.src=u.avatar;
}

/* Ø§Ù„Ø­Ø³Ø§Ø¨ */
function openAccount(){
  const u=JSON.parse(localStorage.getItem(USER_KEY));
  editUsername.value=u.username;
  editPassword.value=u.password;
  avatarEdit.src=u.avatar;
  app.classList.add("blur");
  accountPanel.style.display="flex";
}

function closeAccount(){
  app.classList.remove("blur");
  accountPanel.style.display="none";
}

function previewAvatarEdit(e){
  const f=e.target.files[0];
  if(!f) return;
  const r=new FileReader();
  r.onload=()=>avatarEdit.src=r.result;
  r.readAsDataURL(f);
}

function saveAccount(){
  if(!editUsername.value || !editPassword.value){
    alert("Ø§ÙƒØªØ¨ Ø§Ù„Ø¨ÙŠØ§Ù†Ø§Øª");
    return;
  }
  const u={
    username:editUsername.value,
    password:editPassword.value,
    avatar:avatarEdit.src || DEFAULT_AVATAR
  };
  localStorage.setItem(USER_KEY,JSON.stringify(u));
  avatar.src=u.avatar;
  playSound(700,200);
  closeAccount();
}

function deleteAccount(){
  if(confirm("Ù…ØªØ£ÙƒØ¯ØŸ")){
    localStorage.clear();
    location.reload();
  }
}

/* Ø§Ù„Ø«ÙŠÙ… ÙˆØ§Ù„ØµÙˆØª */
function toggleTheme(){
  document.body.classList.toggle("light");
  localStorage.setItem(THEME_KEY,
    document.body.classList.contains("light")?"light":"dark");
}

